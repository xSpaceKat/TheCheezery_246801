<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/producto_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/caramelfrap" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/producto_nombre"
            android:layout_width="wrap_content"
            android:textColor="#B60089"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_height="wrap_content"
            android:text="Caramel Frap" />
    
        <TextView
            android:id="@+id/producto_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#262525"
            android:textSize="8sp"
            android:fontFamily="sans-serif-light"
            android:text="Descripcion del producto" />
    </LinearLayout>
    
    <TextView
        android:id="@+id/producto_precio"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textColor="#9E2E81"
        android:textSize="19sp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="$5" />
    
</LinearLayout>